<div class="row center-align">
    <h1>Inscription</h1>
    <ul id="tabs-swipe" class="tabs">
        <li class="tab col s2 offset-s4"><a class="active" href="#tab-swipe-contributeur">Contributeur</a></li>
        <li class="tab col s2"><a href="#tab-swipe-entrepreneur">Entrepreneur</a></li>
    </ul>
    <div id="tab-swipe-contributeur" class="col s12">
        <form method="post" action="/validationInscriptionContributeur">
            <div class="input-field col s2 offset-s4">
                <input name="lastname" type="text" class="validate" {{#if nom}}value="{{nom}}"{{/if}}>
                <label for="lastname">Nom</label>
            </div>
            <div class="input-field col s2">
                <input name="firstname" type="text" class="validate" {{#if prenom}}value="{{prenom}}"{{/if}}>
                <label for="firstname">Prénom</label>
            </div>
            <div class="input-field col s2 offset-s4">
                <input name="login" type="text" class="validate" {{#if login}}value="{{login}}"{{/if}}>
                <label for="login">Login</label>
            </div>
            <div class="input-field col s2">
                <input name="password" type="password" class="validate" {{#if password}}value="{{password}}"{{/if}}>
                <label for="password">Mot de passe</label>
            </div>
            <div class="input-field col s2 offset-s4">
                <input name="email" type="email" class="validate" {{#if email}}value="{{email}}"{{/if}}>
                <label for="email">E-mail</label>
            </div>
            <div class="input-field col s2">
                <input name="address" type="text" class="validate" {{#if address}}value="{{address}}"{{/if}}>
                <label for="address">Adresse Ethereum</label>
            </div>
            <div id="erreurInscription" class="col s2 offset-s5">
                {{#if erreurInscription}}
                    <span>{{erreurInscription}}</span>
                {{/if}}
            </div>
            <div class="col s12">
                <input class="btn waves-effect waves-light" type="reset" value="Annuler">
                <input class="btn waves-effect waves-light" type="submit" value="inscription">
            </div>
        </form>
    </div>
    <div id="tab-swipe-entrepreneur" class="col s12">
        <form method="post" action="/validationInscriptionEntrepreneur">
            <div class="input-field col s2 offset-s4">
                <input name="lastname" type="text" class="validate">
                <label for="lastname">Nom</label>
            </div>
            <div class="input-field col s2">
                <input name="firstname" type="text" class="validate">
                <label for="firstname">Prénom</label>
            </div>
            <div class="input-field col s2 offset-s4">
                <input name="login" type="text" class="validate">
                <label for="login">Login</label>
            </div>
            <div class="input-field col s2">
                <input name="password" type="password" class="validate">
                <label for="password">Mot de passe</label>
            </div>
            <div class="input-field col s2 offset-s4">
                <input name="email" type="email" class="validate">
                <label for="email">E-mail</label>
            </div>
            <div class="input-field col s2">
                <input name="nomEntreprise" type="text" class="validate">
                <label for="nomEntreprise">Nom de la société</label>
            </div>
            <div class="input-field col s4 offset-s4">
                <input name="address" type="text" class="validate">
                <label for="address">Adress Ethereum</label>
            </div>
            <div class="file-field input-field col s4 offset-s4">
                <div class="btn">
                    <span>Pièce d'identité</span>
                    <input type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <div class="col s12">
                <input class="btn waves-effect waves-light" type="reset" value="Annuler">
                <input class="btn waves-effect waves-light" type="submit" value="inscription">
            </div>
        </form>
    </div>
</div>