<div id="profileContainer" class="card" style="margin-left: 25%; margin-right: 25%;">
    <div class="row">
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"> {{profile.nom}} {{profile.prenom}} </span> <a href="/modifierProfile" class="btn-floating btn-large waves-effect waves-light black right"><i class="material-icons">settings</i></a>
            <br>

            <ul class="collapsible" data-collapsible="accordion">
                <li>
                    <div class="collapsible-header"><i class="material-icons">account_circle</i>Login</div>
                    <div class="collapsible-body"><span>{{profile.login}}</span></div>
                </li>
                <li>
                    <div class="collapsible-header"><i class="material-icons">mail</i>Mail</div>
                    <div class="collapsible-body"><span>{{profile.mail}}</span></div>
                </li>
                <li>
                    <div class="collapsible-header"><i class="material-icons"></i>Adresse public Ethereum</div>
                    <div class="collapsible-body"><span>{{profile.addrPubliqueEth}}</span></div>
                </li>
            </ul>

        </div>
    </div>
</div>
