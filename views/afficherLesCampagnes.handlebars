
<div id="campagnesContainer">
    {{#each campagnes}}
        <div class="row">
            <div class="col s4">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="/images/placeholder.jpg" />
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{nomCampagne}}<i class="material-icons right">more_vert</i></span>
                        <p><a href="#">This is a link</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{nomCampagne}}<i class="material-icons right">close</i></span>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
        </div>    
    {{/each}}
</div>

<link rel="stylesheet" href="/stylesheets/afficherLesCampagnes.css">




