<div class="row">
    <div class="col s4 offset-s2">
        {{#ifCond notifLength '>' -1}}
            <div class="card black-text">
                <div class="card-content">
                    <span class="card-title center-align">Notifications</span>
                    {{#ifCond notifLength '==' 0}}
                        <hr />
                        <h6>Vous n'avez aucune notification sur les 7 derniers jours</h6>
                    {{else}}
                        {{#each notifications}}
                            <hr />
                            <p>{{this.text}}</p>
                            <p>Le {{formatDate this.date 'DD/MM/YYYY'}}</p>
                        {{/each}}
                    {{/ifCond}}
                </div>
            </div>
        {{else}}

        {{/ifCond}}
    </div>

</div>

<link rel="stylesheet" href="/stylesheets/accueil.css">