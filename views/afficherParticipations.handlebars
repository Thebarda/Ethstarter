    <div class="row center-align">
        <h1>Vos contributions</h1>
        <form class="contribute">
            <table class="striped highlight responsive-table">
                <thead>
                    <tr>
                        <th>Nom de la campagne</th>
                        <th>Montant</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                {{#each participation}}
                    <tr>
                        <td><input name="_nomCampagne" type="text" value="{{this.nomCampagne}}" disabled></td>
                        <td><input name="_montant" type="text" value="{{this.montant}}" disabled></td>
                        <td><a class="btn waves-effect waves-light red" id="submit">Supprimer la contribution</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </form>
    </div>